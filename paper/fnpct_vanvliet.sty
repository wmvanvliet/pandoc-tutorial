            \prop_map_break:
          }
          { \bool_set_false:N \l__fnpct_multiple_footnotes_bool }
      }
    \bool_if:NTF \l__fnpct_multiple_footnotes_bool
      { \tl_use:N \l__fnpct_multiple_true_tl }
      { \tl_use:N \l__fnpct_multiple_false_tl }
