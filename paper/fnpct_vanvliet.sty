\AtBeginDocument
  {
    \fnpct_if_package_loaded:nTF {hyperref}
      { \bool_set_true:N \l__fnpct_hyperref_bool  }
      {
        \cs_if_exist:NF \AfterBeginDocument
          { \cs_new:Npn \AfterBeginDocument #1 {#1} }
