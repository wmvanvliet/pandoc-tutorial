\cs_new_protected:Npn \__fnpct_check_multiple:
  {
    \prop_map_inline:Nn \g__fnpct_adapted_notes_prop
      {
        \tl_set_rescan:Nnn \l__fnpct_tmpb_tl {} {##1}
        \exp_args:NV
