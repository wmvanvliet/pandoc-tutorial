    \tl_remove_all:NV \l__fnpct_punctuation_marks_tl
      \l__fnpct_current_punct_mark_tl
    \tl_put_right:NV \l__fnpct_punctuation_marks_tl
      \l__fnpct_current_punct_mark_tl
    \int_compare:nTF { \l__fnpct_tmpa_int < \tl_count:V \l__fnpct_punctuation_marks_tl }
      {#2}
      {#3}
  }
