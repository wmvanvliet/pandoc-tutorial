    \exp_args:NV \peek_meaning_remove:NTF \l__fnpct_current_punct_mark_tl
      {#2}
      {
        \__fnpct_check_punctuation_aux:nnn {#1}
          { \__fnpct_check_punctuation:VTF \l__fnpct_tmpa_int {#2} {#3} }
          {#3}
